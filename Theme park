#include <iostream>
using namespace std;
int main()
{
    cout << "Enter your height in meters to check whether you can ride or not\n";
    double height, age;
    cin >> height;
    cout << "Enter your age to check whether you can ride or not\n";
    cin >> age;
    if (age >= 5 && height >= 0.6)
    {
        cout << "you are eligible to have this ride";
    }
    else if (age < 5 && height < 0.6)
    {
        cout << "you are not allowed to have this ride";
    }
    else
    {
        cout << "incorrect";
    }
}
